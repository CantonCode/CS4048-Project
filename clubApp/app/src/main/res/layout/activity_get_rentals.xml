<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Rental.GetRentalsActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rentals"
        android:text=""
        android:textAlignment="center"
        android:textColor="#F6050000" />

    <TextView
        android:id="@+id/rentals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Rentals"
        android:textAlignment="center"
        android:textColor="#2144F3"
        android:textSize="18sp"
        android:layout_alignParentTop = "true"/>

    <TextView
        android:id="@+id/barchartView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stats"
        android:textColor="#2144F3"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView4"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barchartView"/>

</RelativeLayout>
