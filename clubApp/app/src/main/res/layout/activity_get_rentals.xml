<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Rental.GetRentalsActivity">

    <TextView
        android:id="@+id/rentals"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Upcoming Rentals"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#F7F7F8"
        android:background="#0022FF"
        android:layout_alignParentTop = "true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/rentals"
        android:background="#ADDFF1"
        android:padding="4dp"
        android:scrollbars="vertical" />


    <TextView
        android:id="@+id/barchartView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/recyclerView"
        android:background="#0022FF"
        android:text="Overview"
        android:textAlignment="center"
        android:textColor="#F7F7F8"
        android:textSize="18sp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/barchartView">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#ADDFF1" />
    </RelativeLayout>

</RelativeLayout>

