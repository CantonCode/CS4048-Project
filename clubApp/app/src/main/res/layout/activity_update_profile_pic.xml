<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Login.UpdateProfilePicActivity"
    android:background="#e2ebf1">

    <TextView
        android:id="@+id/currentUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:background="@drawable/heading_text"
        android:gravity="center"
        android:text="Change Profile Picture"
        android:textColor="#ffde59"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/uploadPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilePicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="10dp"

        android:text="Select Picture" />

    <Button
    android:id="@+id/takePic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/uploadPic"
    android:layout_centerHorizontal="true"
    android:layout_margin="10dp"

    android:text="Take Picture" />

    <Button
        android:id="@+id/changePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/takePic"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"

        android:text="Change Profile Picture" />

</RelativeLayout>
